void updateNeopixel(){
  static float adjusted;
  static float threshold;

  if ( temperatureReadings.lastValue < 50.0 || temperatureReadings.lastValue > 85.0 ){
    leds[0] = CRGB::Red;
    FastLED.show();
    return;
  }

  adjusted = temperatureReadings.lastValue - 70.0;
  threshold = adjusted < 0 ? abs(adjusted) * 3 + 70 : 70 - adjusted * 2;

  if( humidityReadings.lastValue >= (threshold - 5) && humidityReadings.lastValue <= (threshold + 5)){
    leds[0] = CRGB::Green;
  } else if( humidityReadings.lastValue >= (threshold - 15) && humidityReadings.lastValue <= (threshold + 15)){
    leds[0] = CRGB::Yellow;
  }
  else{
    leds[0] = CRGB::Red;
  }
  FastLED.show();
}

void updateHumidityReadings( float rH){
  humidityReadings.lastValue = rH;

  if( humidityReadings.count == 0 ){
    humidityReadings.maxValue = rH;
    humidityReadings.minValue = rH;
    humidityReadings.avgValue = rH;
  } else {
    if ( rH > humidityReadings.maxValue ){
      humidityReadings.maxValue = rH;
    } else if ( rH < humidityReadings.minValue ){
      humidityReadings.minValue = rH;
    }
    humidityReadings.avgValue = (
      (humidityReadings.avgValue * (humidityReadings.count - 1)) + rH
    ) / humidityReadings.count;
  }

  // Increment count. 1.5 days, reduce the count to 0.5 days.
  humidityReadings.count += 1;
  if( humidityReadings.count > 259200 ){
    humidityReadings.count = 86400;
  }
}

